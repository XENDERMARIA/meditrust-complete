{ "name": "meditrust-complete",
  "version": "3.0.0",
  "description": "Blockchain-based medicine verification system",
  "main": "multichain-backend-production.js",
  "scripts": {
    "start": "node multichain-backend-production.js",
    "dev": "nodemon multichain-backend-production.js",
    "build": "cd frontend && npm install && npm run build && cp -r dist ../dist",
    "test": "node test-deployment.js",
    "compile": "npx hardhat compile",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "deploy:base": "npx hardhat run scripts/deploy.js --network base",
    "deploy:arbitrum": "npx hardhat run scripts/deploy.js --network arbitrum",
    "deploy:all": "npm run deploy:polygon && npm run deploy:base && npm run deploy:arbitrum",
    "verify": "node scripts/verify-contracts.js"
  },
  "dependencies": {
    "@erc7824/nitrolite": "^0.2.31",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^5.7.2",
    "express": "^4.21.2",
    "qrcode": "^1.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "nodemon": "^3.0.1",
    "solidity-coverage": "^0.8.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
"repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/meditrust.git"
  },
  "keywords": [
    "blockchain",
    "medicine",
    "verification",
    "ethereum",
    "web3"
  ],

  "author": "",
  "license": "MIT"
}
